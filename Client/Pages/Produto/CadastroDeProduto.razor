@page "/produto/cadastro"

<div class="container">
  <div class="row col-sm-12 justify-content-around">
    <div class="row col-sm-6">
      <div class="card col-sm-12 px-lg-5">
        <div class="card-body">
          <div class="custom-file">
            <input type="imagem" class="InputImagem" id="ImagemProdutoVal" required>
            <label class="custom-file-label" for="ImagemProdutoVal">Escolha a Imagem...</label>
          </div>
        </div>
      </div>
    </div>
    <div class="row col-sm-6">
      <div class="card col-sm-12 px-lg-5 ">
        <div class="card-body">
          <p>Cadastro de Produto</p>
          <form>            
            <div class="form-group">
              <label>Nome</label>
              <input class="form-control" id="nomeProduto" placeholder="Nome do produto">
            </div>
            <div class="form-group">
              <label>Descrição</label>
              <input class="form-control" id="nomeProduto" placeholder="Descrição do produto">
            </div>
            <div class="form-group">
              <label>Preço</label>
              <input class="form-control" id="nomeProduto" placeholder="Preço do produto">
            </div>
            <div class="form-group">
              <label>Categoria</label>
              <input class="form-control" id="nomeProduto" placeholder="Categoria do produto">
            </div>
            <div class="form-group">
              <label>Fornecedor</label>
              <input class="form-control" id="nomeProduto" placeholder="Fornecedor do produto">
            </div>
            <button type="submit" class="btn btn-primary">Cancelar</button>    
            <button type="submit" class="btn btn-primary">Salvar</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>